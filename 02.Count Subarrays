#include <bits/stdc++.h> 
int numberofSubarrays(vector<int> & arr, int n){
    // Write your code here.
    long long ans=0;
    int i=0;
    while(i<n)
    {
        int j=i;
        while(j<n && arr[j]==arr[i]){
            j++;

        }
        long long len=j-i;
        ans+=(len*(len+1))/2;
        i=j;
    }
    return ans;
    
}
