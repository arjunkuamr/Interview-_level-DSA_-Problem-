#include <bits/stdc++.h> 
int pairSum(vector<int> &arr, int n, int target){
	// Write your code here.
	int start=0,end=n-1;
	int count=0;

	while(start<end)
	{
		if((arr[start]+arr[end])==target){
			count++;
			start++;
			end--;
	    } 
		else if((arr[start]+arr[end])<target){
		    start++;
	    }
	    else{
		   end--;

	    }
		
	}
	if(count<1)
	  return -1;

	else{
		return count;
	}
	
}
