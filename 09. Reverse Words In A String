string reverseString(string &str){
	 if(str.empty()) return "";            // Case: empty string
    if(str == " ") return "";             // Case: single space

    string ans = "";
    int i = str.length() - 1;

    while(i >= 0) {
        // skip spaces
        while(i >= 0 && str[i] == ' ') i--;

        if(i < 0) break;   // all spaces case

        if(!ans.empty()) ans += " ";  // add space before new word (not at start)

        // collect current word
        string word = "";
        while(i >= 0 && str[i] != ' ') {
            word += str[i];
            i--;
        }

        // reverse the collected word (because we traversed backward)
        reverse(word.begin(), word.end());
        ans += word;
    }

    return ans;

}
