#include<algorithm>
#include<iostream>
#include <vector>

vector<pair<int,int>> twoSum(vector<int>& arr, int target, int n)
{
	// Write your code here. 

    sort(arr.begin(),arr.end());
    vector<pair<int,int>>ans;
    int s=0;
    int e=n-1;

    while(s<e)
    {
        int sum=arr[s]+arr[e];
        if(sum==target)
        {
            ans.push_back({arr[s],arr[e]});
            s++;
            e--;
        }
        else if(sum>target)
        {
            e--;
        }else{
            s++;
        }
    }
    if(ans.empty())
    {
        ans.push_back({-1,-1});
    }
    return ans;


    
}
